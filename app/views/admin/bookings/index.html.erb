<div class="col-lg-12">
  <div class="mt-4 mb-4">
    <div class="card">
      <div class="card-body">
        <%= search_form_for @find_booking, url: admin_bookings_path do |f| %>
          <h4 class="mt-4 mb-4">Search from booking attributes</h4>
          <div class="row">
            <div class="col-lg-4">
              <div class="form-group">
                <%= f.label :order_number %>
                <%= f.search_field :order_number_cont, class: 'form-control' %>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                <%= f.label :amount_paid_eq %>
                <%= f.search_field :amount_paid_eq, class: 'form-control' %>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                <%= f.label :amount_paid_lteq %>
                <%= f.search_field :amount_paid_lteq, class: 'form-control' %>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                <%= f.label :amount_paid_gteq %>
                <%= f.search_field :amount_paid_gteq, class: 'form-control' %>
              </div>
            </div>
          </div>
          <hr>
          <h4 class="mt-4 mb-4">Search from customer attributes</h4>
          <div class="row">
            <div class="col-lg-4">
              <div class="form-group">
                <%= f.label :customer_full_name %>
                <%= f.search_field :customer_full_name_cont, class: 'form-control' %>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                <%= f.label :customer_email %>
                <%= f.search_field :customer_email_cont, class: 'form-control' %>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="form-group">
                <%= f.label :customer_contact %>
                <%= f.search_field :customer_contact_number_cont, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class="col-12">
            <%= f.submit class: 'btn btn-primary mt-4' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Booking ID</th>
      <th>Customer</th>
      <th>Workshop</th>
      <th>Amount Paid</th>
      <th>Tickets Booked</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.order_number %></td>
        <td><%= booking.customer.full_name %></td>
        <td><%= booking.workshop.name %></td>
        <td><%= booking.amount_paid %></td>
        <td><%= booking.no_of_tickets %></td>
        <td>
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Actions
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <li><%= link_to 'View', admin_booking_path(booking), class: 'dropdown-item' %></li>
              <li><%= link_to 'Delete', admin_booking_path(booking), class: 'dropdown-item', data: { confirm: 'Are you sure you want to delete this booking?' }, method: :delete %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>