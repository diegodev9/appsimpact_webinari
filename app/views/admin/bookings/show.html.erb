<div class="col-12">
  <div class="mt-4 mb-4">
    <%= link_to 'Back to Dashboard', admin_dashboard_path, class: 'btn btn-primary' %>
    <%= link_to 'View All Bookings', admin_bookings_path, class: 'btn btn-primary' %>
  </div>
</div>
<div class="col-lg-8">
  <div class="card shadow mb-3">
    <div class="card-body">
      <h4 class="card-title"><%= @workshop.name %></h4>
      <div class="row mt-3">
        <div class="col-lg-7">
          <h4><span class="badge bg-primary"><%= @workshop.total_duration %></span></h4>
          <h4><span class="badge bg-primary"><%= @workshop.daily_duration %></span></h4>
        </div>
        <div class="col-lg-5">
          <h4>Total Sits: <span class="badge bg-primary"><%= @workshop.total_sits %></span></h4>
          <h4>Remaining Sits: <span class="badge bg-primary"><%= @workshop.remaining_sits %></span></h4>
          <h4>Registration Fee: <span class="badge bg-primary"><%= @workshop.registration_fee %></span></h4>
        </div>
      </div>
      <p class="lead mt-3 mb-3"><%= @workshop.description %></p>
    </div>
  </div>
</div>
<div class="col-lg-4">
  <div class="card shadow mb-3">
    <div class="card-body">
      <h4 class="card-title">Customer Details</h4>
      <hr>
      <p class="lead"><b>Name: </b><%= @customer.full_name %></p>
      <p class="lead"><b>Email: </b><%= @customer.email %></p>
      <p class="lead"><b>Contact No.: </b><%= @customer.contact_number %></p>
    </div>
  </div>
</div>